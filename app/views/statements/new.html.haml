= simple_form_for @statement do |f|
  = f.input :name 
  = f.input :description
  %h3 Line Items 
  #lineitem
    = @initial_fields.each_with_index do |line, index|
      

    = f.simple_fields_for :lineitems do |pre_lineitems|
      = render '/statements/prefilled_fields, f: pre_lineitems
    .links
      = link_to_add_association 'Add Line Item', f, :lineitems,count: 1

    = f.simple_fields_for :lineitems do |lineitem|
      = render '/statements/lineitem_fields', f: lineitem
    .links
      = link_to_add_association 'Add Line Item', f, :lineitems,count: 1
  = f.button :submit 
